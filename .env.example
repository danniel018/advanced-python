# Database Configuration
# For PostgreSQL (production/development with Docker):
DATABASE_URL=postgresql+asyncpg://capstone:capstone_password@localhost:5432/capstone_db

# For SQLite (local testing without Docker):
# DATABASE_URL=sqlite+aiosqlite:///./test.db

# PostgreSQL Settings (used by docker-compose.yml)
POSTGRES_USER=capstone
POSTGRES_PASSWORD=capstone_password
POSTGRES_DB=capstone_db

# Application Settings
DEBUG=True
APP_NAME=Capstone Project API
APP_VERSION=1.0.0

# Database Engine Settings
DB_ECHO=True
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
